generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  email String  @id @unique
  credit Int @default(0)
  notifications Notification[]
}

model Notification {
  id String        @id @unique
  userEmail        String
  user             User @relation(fields: [userEmail], references: [email])
  exchange         String
  currency         String
  network          String
  targetFee        Decimal
  targetCurrency   String
}